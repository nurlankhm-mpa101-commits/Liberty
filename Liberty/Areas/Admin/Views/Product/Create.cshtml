@using Liberty.ViewModels
@model ProductCreateVM

<div class="container">
	<div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input class="form-control" asp-for="Name" asp placeholder="Name">
                <span asp-validation-for="Name" class="text-danger" ></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input class="form-control" asp-for="Description" asp placeholder="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image">Image</label>
                <input class="form-control" asp-for="Image" asp placeholder="Image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input class="form-control" asp-for="Price" asp placeholder="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating">Rating</label>
                <input class="form-control" asp-for="Rating" asp placeholder="Rating">
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId">CategoryId</label>
                <select asp-for="CategoryId"  asp-items="@ViewBag.Categories"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
           
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
	</div>
</div>